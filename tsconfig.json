{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["cypress", "node", "mdx"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@joy/*": [
        "./src/*"
      ],
      "@joy/auth": ["./auth"]
    }
  },
  "include": [
    "./next-env.d.ts",
    "./new-types.d.ts",
    "./next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./jest.setup.ts",
    "node_modules/cypress/types/cypress-global-vars.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./cypress.config.ts"
  ]
}
